                android:layout_width="500dp"
                android:layout_height="600dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/about4" />
            <ImageView
                android:layout_width="500dp"
                android:layout_height="600dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/about5" />
            <ImageView
                android:layout_width="500dp"
                android:layout_height="600dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/about6" />
            <ImageView
                android:layout_width="500dp"
                android:layout_height="600dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/about7" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
