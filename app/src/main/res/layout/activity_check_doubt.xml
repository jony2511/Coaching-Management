<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".CheckDoubt">

    <Button
        android:id="@+id/askAI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ask to AI"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:backgroundTint="@color/lavender"
        android:background="@drawable/button_bg"
        />
    <Button
        android:id="@+id/askTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ask to Teacher"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:backgroundTint="@color/lavender"
        android:background="@drawable/button_bg"
        />
    <Button
        android:id="@+id/showDoubts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See previous doubts"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:backgroundTint="@color/lavender"
        android:background="@drawable/button_bg"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/lavender"
        android:textStyle="italic|bold"
        android:text="N.B.: It may require time to get response from a  teacher."
        android:textSize="16sp"/>
</LinearLayout>